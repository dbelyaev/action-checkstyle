{
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": false,
      "matchPackageNames": [
        "/^actions//",
        "/^github//"
      ]
    }
  ]
}
