{
  "extends": [
    "config:best-practices"
  ],
  "labels": [
    "dependencies"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "description": "Longer cooldown for major versions",
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "15 days"
    },
    {
      "description": "Medium cooldown for minor versions with automerge",
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "7 days",
      "automerge": true
    },
    {
      "description": "Short cooldown for patch versions with automerge",
      "matchUpdateTypes": ["patch"],
      "automerge": true
    }
  ]
}
